<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D9EFD1">

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="#9E55F8"
            android:padding="16dp">

             <ImageView
                android:id="@+id/optionsMenu"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/menu"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

             <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MediMeet"
                android:textColorHighlight="@color/black"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3D2D2">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileIconMain"
                android:layout_margin="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/profileicon"
                android:clickable="true"
                android:onClick="openProfileActivity"/>



        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profileIconMain"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cart" />

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/checklist" />

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/phone" />

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/blood" />

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/medicalinsurance" />

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/alarm" />

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/share" />

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/usersettings" />

            </LinearLayout>
        </HorizontalScrollView>
        </RelativeLayout>
        <TextView
            android:id="@+id/greetingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/black"
             android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Hello" />

                <ImageView
                    android:paddingTop="10dp"
                    android:id="@+id/image1"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/appointment"
                    android:layout_margin="30dp"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:id="@+id/button1"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOK APPOINTMENT NOW"
                    android:layout_gravity="center_horizontal"/>



                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/waitlist"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"

                    android:text="CHECK YOUR SERIAL NO"
                    android:layout_gravity="center_horizontal"/>



                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/doctors"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"

                    android:text="SEE OUR SPECIALISTS"
                    android:layout_gravity="center_horizontal"/>


                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/buymedicines"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="BUY MEDICINES"
                    android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/img_insurence"
            android:layout_width="300dp"
            android:layout_margin="20dp"
            android:layout_height="300dp"
            android:src="@drawable/insurence"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_insurence"
            android:layout_marginBottom="15dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET INSURED"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/img_vid"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/videocall"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/videoCallButton"
            android:layout_marginBottom="15dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO CALL CONSULTANCE"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/img_sug"
            android:layout_margin="20dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/reports"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_sug"
            android:layout_marginBottom="15dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHECK YOUR REPORTS"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/marqueeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUR DOCTORS: 1. Dr.John Doe - Cardiologist , 2. Dr. Jane Smith - Neurologist , 3. Dr. Emily Davis - Dermatologist,
           4. Dr. Michael Brown - Orthopedic Surgeon , 5.  Dr. Sarah Johnson - Pediatrician , 6. Dr. William Lee - Oncologist ,
           7. Dr.Jessica White - General Surgeon ,8. Dr. Robert King - Gastroenterologist, 9. Dr. Linda Adams - Ophthalmologist,
          10. Dr. David Wilson - ENT Specialist"
            android:textSize="18sp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black" />


    </LinearLayout>
</ScrollView>
